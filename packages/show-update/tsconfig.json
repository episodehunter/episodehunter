{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "src/schema.json",
        "tag": "gql"
      }
    ]
  }
}
